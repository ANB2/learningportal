%a{ :name => 'contributors' }
.contributors
  %h4
    = pluralize(@article['contributors'].size, 'Contributor').gsub(/^\d+\s/, "")
    = surround '(', ')' do
      = @article['contributors'].size
  - @article['contributors'].each do |contributor|
    .media.contributor
      %a.img{:href => author_path(:id => contributor['name'])}
        %img{:alt => "", :src => ""}/
      .bd= link_to(contributor['name'], author_path(:id => contributor['name']))