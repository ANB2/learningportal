.section-header
  Top Contributors
  = link_to "View all", sidebar_contributor_path, :remote => true, :class => 'btn btn-primary btn-small fr viewall'
%section.pane
  %ol
    - @authors.each_with_index do |author, i|
      %li
        = link_to author_path(:id => author.name) do
          %span.avatar
          %span.name= "#{i+1}. #{author.name}"
          %span.counts= "#{pluralize(author.contributions_by_type[:text], 'article')}, #{pluralize(author.contributions_by_type[:video], 'video')}, #{pluralize(author.contributions_by_type[:audio], 'image')}"
.section-header
  Popular Tags
  = link_to "View all", sidebar_tag_path, :remote => true, :class => 'btn btn-primary btn-small pull-right viewall'
%section.pane
  %ul
    - @categories.each do |tag|
      %li.tag
        = link_to tag_path(:id => tag.name) do
          .tag-nub
          .tag-text= tag.name