.separator
  %span.pull-left
    SHOWING: TAGS,
    %span.description
    = surround "'", "'" do
      = @letter
  %span.resultcount
    = surround "(", ")" do
      = pluralize(@categories.size, 'Result')

%section.pane
  %ul
    - @categories.each do |tag|
      %li.tag
        .tag-nub
        .tag-text= link_to(tag.name, tag_path(:id => tag.name))